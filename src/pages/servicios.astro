---
import { serviciosFble } from "@/assets/data/data";
import ServiciosCard from "@/components/cards/ServiciosCard.astro";

import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <h1 class="title">Servicios</h1>
  <p class="describe">
    Los siguientes son los principales servicios ofrecidos por Frigor√≠ficos BLE.
  </p>

  <div
    class="grid-cols-1 grid md:grid-cols-2 md:gap-8 xl:gap-20 xl:grid-cols-3 p-8"
  >
    {
      serviciosFble.map((servicio) => (
        <ServiciosCard title={servicio.title} content={servicio.describe} />
      ))
    }
  </div>
</Layout>
