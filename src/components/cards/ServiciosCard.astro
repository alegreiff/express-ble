---
import { Icon } from "astro-icon/components";
interface Props {
  title?: string;
  content?: string;
}

const { title, content } = Astro.props;
---

<div
  class="rounded-tl-2xl rounded-br-2xl h-96 shadow-2xl relative overflow-hidden flex flex-col group"
>
  <div
    class="bg-gradient-to-r
  to-bleColor-verde to-100%
  via-bleAzul via-50%
  from-bleAzul from-0%
  h-40 text-bleBlanco text-3xl px-6 py-4 text-center flex items-center justify-center"
  >
    {title}
  </div>
  <div
    class="h-full bg-bleBlanco-500 text-bleNegro/80 text-xl p-4 flex items-center justify-center"
  >
    {content}
  </div>
  <div class="h-44 bg-bleAzul border-t-8 border-bleColor-verde"></div>

  <Icon
    name="simboloblanco"
    class="absolute bottom-0 -right-2 w-24 h-24 -rotate-[26deg] text-bleBlanco transition-all duration-200 opacity-10 group-hover:opacity-100"
  />
  <Icon
    name="check"
    class="w-24 h-24 text-bleBlanco absolute bottom-0 -left-1"
  />
</div>
